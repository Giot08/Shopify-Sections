{
  "name": "shopify-sections",
  "version": "1.0.0",
  "description": "Customizable shopify sections for free use",
  "main": "src/index.js",
  "scripts": {
    "update": "node src/theme-sync.js",
    "theme": "cd ./theme && theme watch --allow-live",
    "css": "npx @tailwindcss/cli -i ./src/input.css -o ./theme/assets/giot-product-cards.css --watch",
    "build": "esbuild ./src/input.js --bundle --outfile=./theme/assets/giot-product-cards.js --watch --minify"
  },
  "author": "Jose Miguel Torres Medina",
  "license": "MIT",
  "dependencies": {
    "@tailwindcss/cli": "^4.1.5",
    "dotenv": "^16.4.5",
    "tailwindcss": "^4.1.5"
  },
  "devDependencies": {
    "esbuild": "0.25.4"
  }
}
